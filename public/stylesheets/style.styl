@import url("http://fonts.googleapis.com/css?family=Electrolize")

html, body
  font-family Electrolize
  background-color black
  color #74A0EF
  //padding 0
  //margin 0
  font-size 12px
  text-shadow 0 0 10px #6495ED

  footer
    text-align right

a
  color #FFCC66
  text-shadow 0 0 4px #B29252

.login
  float right
  margin 10px
  display inline

  *
    
    margin-left 5px

  button, input
    padding 2px 5px
    background black
    background-color black
    color #FFCC66
    border 1px solid #74A0EF
    font-family Electrolize
  button
    float right

.post
  header
    .title
      font-size 1.5em
    .details
      color #A7C3F4
  p
    margin-left 0px

#posts
  margin 20px 20px 20px 20px

.websiteName
  font-size 3em
  color #A7C3F4

img  
  -webkit-filter: sepia(80%) hue-rotate(170deg) contrast(175%) brightness(-15%); 
  border 1px solid #000000
  -webkit-box-shadow 0 0 2px 2px #6495ED;
  margin 5px